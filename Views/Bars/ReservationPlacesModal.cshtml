@model ShishaWeb.Models.Models.Reservation


<partial>
    <form   asp-action="ReservePlaces"  >
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger">
            </span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger">
            </span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger">
            </span>
        </div>
        <div class="form-group">
            <label asp-for="ClientsCount" class="control-label">Clients Count</label>
            <input asp-for="ClientsCount" class="form-control" />
            <span asp-validation-for="ClientsCount" class="text-danger">
            </span>
        </div>
        <div class="form-group">
            <label asp-for="ForWhen" class="control-label">For When</label>
            <input asp-for="ForWhen" class="form-control" />
            <span asp-validation-for="ForWhen" class="text-danger dateinput">
            </span>
        </div>
        <div class="modal-footer">
            <input type="submit" value="Reserve" class="btn btn-primary"/>

            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </form>
</partial>